                                    {
                                        if (primaryTitleLink.Target == "_blank")
                                        {
                                                            <h2>
                                                                <a href="@primaryTitleLink.Url" target="_blank">
                                                                    @primaryTitle

                                                                </a>
                                                            </h2>
                                                        }
                                        else
                                        {
                                                            <h2>
                                                                <a href="@primaryTitleLink.Url">
                                                                    @primaryTitle

                                                                </a>
                                                            </h2>
                                                        }
                                    }
                                                    else
                                                    {
                                                        <h2>@primaryTitle</h2>
                                }

	                              					<div class="flexBox">


                                                     @foreach (var megamenu in megaMenuPanel)
                                {
