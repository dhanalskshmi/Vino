              <div class="marginWrap">
            <ul>
            @if (Model.Content.AncestorOrSelf(1).HasValue("primaryNavigation"))
            {
                foreach (var primaryNav in primaryNavigation)
                {
                    var primaryTitleLink = primaryNav.GetPropertyValue<Link>("primaryTitleLink");
