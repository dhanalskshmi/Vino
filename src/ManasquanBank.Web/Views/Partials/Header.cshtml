                                    {
                                        if (subMenuLink.Target == "_blank")
                                        {
                                            <a href="@subMenuLink.Url" target="_blank" class="msubMenu">@megamenuTitle </a>
                                        }
                                        else
                                        {
                                            <a href="@subMenuLink.Url" class="msubMenu">@megamenuTitle </a>
