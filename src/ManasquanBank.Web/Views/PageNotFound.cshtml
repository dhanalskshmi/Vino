@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var title = Model.Content.GetPropertyValue<string>("title");
    var bodyText = Model.Content.GetPropertyValue<string>("notFoundbodyText");
    var notFoundbackgroundImage = Model.Content.GetPropertyValue<IPublishedContent>("notFoundbackgroundImage");
}
@section BackgroundImage {
    @if (notFoundbackgroundImage != null)
    {
        <div class="fixedBg fade out" style="background-image: url('@notFoundbackgroundImage.Url')">
            <img src="images/body_bg.jpg" alt="">
        </div>
    }
}
<section class="heroBanner">
    
</section>
<div class="error-page">
    <section class="heroBlock">
        <div class="containerWrapper">
            <div class="bgWrap clientServiceNeed">
                <section class="pageNot-found-section">
                    <div class="containerWrapper" id="maincontent">
                        <h1>@title</h1>
                        <div class="page-section-box">
                            @Html.Raw(bodyText)
                            <div class="actionBlock">
                                <a href="/" class="btnManasq"><span>go to home page</span></a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</div>