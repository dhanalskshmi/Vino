        else if (flag == true)
        {
            <section class="categorySection rightImg">
                <div class="containerWrapper">
                    <div class="bgWrap">
                        <div class="flexWrap">
                            @if (productImage != null)
                            {
                                <div class="imgSection" style="background-image:url(@productImage.Url);">
                                </div>
                            }
                            <div class="contentSection">
                                @if (!string.IsNullOrEmpty(productTitle))
                                {
                                    <h2>@productTitle</h2>
                                }
                                @if (!string.IsNullOrEmpty(productDescription))
                                {
                                    @Html.Raw(productDescription)
                                }
                                @if (!string.IsNullOrEmpty(featuresList))
                                {
                                    @Html.Raw(featuresList)
                                }

                                <div class="icon-section">
                                    <span>
                                        @if (!string.IsNullOrEmpty(phoneNo))
                                        {
                                            <img src="/images/category-detail/phone-icon.png" alt="phone-icon" />
                                            <a href="tel:@phoneNo">@phoneNo</a>
                                        }

                                    </span>
                                    <span class="location-icon">
                                        @if (branchLocator != null)
                                        {
                                            if (branchLocator.Target == "_blank")
                                            {
                                                <img src="/images/category-detail/location-icon.png" alt="location-icon" />
                                                <a href="@branchLocator.Url" target="_blank">@branchLocator.Name</a>
                                            }
                                            else
                                            {
                                                <img src="/images/category-detail/location-icon.png" alt="location-icon" />
                                                <a href="@branchLocator.Url">@branchLocator.Name</a>
