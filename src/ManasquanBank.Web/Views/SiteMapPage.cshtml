                    <div class="full-width">
                        <div class="left-section">
                            @if (Model.Content.HasValue("leftNavigation"))
                            {
                                foreach (var node in LeftNavigation)
                                {


                                    var CurrentNode = new DynamicNode().NodeById(node);
                                    var CurrentNodehideFromSitemap = Umbraco.TypedContent(CurrentNode.Id);
                                    if (!string.IsNullOrEmpty(CurrentNode.Name))
                                    {
                                        PageTitle = CurrentNode.Name;
                                        <h4><a class="hvr-underline-from-center" href="@CurrentNode.Url">@CurrentNode.Name</a></h4>


                                        if (node.DocumentTypeAlias != "aboutUs" && node.DocumentTypeAlias != "mediaCenterLandingPage" && node.DocumentTypeAlias != "careersLandingPage" && node.DocumentTypeAlias != "timeLine" && node.DocumentTypeAlias != "locationLandingPage")
                                        {
                                            if (node.DocumentTypeAlias == "categoryLandingPage")
                                            {
                                                if (CurrentNode.Children.Count() > 0 && CurrentNodehideFromSitemap.Children.Where("hideFromSitemap == False").Count() > 0)
                                                {


                                                    <ul>
                                                        @foreach (var childNode in CurrentNode.Children)
                                                        {
                                                            if (childNode.NodeTypeAlias == "categoryDetailPage")
                                                            {
                                                                var ChildNode = new DynamicNode().NodeById(childNode.Id);

                                                                if (childNode.GetProperty<bool>("hideFromSitemap") != true)
                                                                {
                                                                    PageTitle = ChildNode.Name;
