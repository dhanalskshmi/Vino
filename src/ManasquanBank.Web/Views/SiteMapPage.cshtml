<section class="heroBanner">
    @if (heroImage != null)
    {
        <figure class="bannerImage" style="background-image: url(@heroImage.Url)"></figure>
    }
</section>
<section class="heroBlock">
    <div class="containerWrapper">
       

        <div class="bgWrap clientServiceNeed">
