                                                                        <h5>
                                                                            <a class="hvr-underline-from-center" href="@ChildNode.Url">@ChildNode.Name</a>
                                                                        </h5>
                                                                        @{
                                                                            var thirdlevel = new DynamicNode().NodeById(childNode.Id);

                                                                            if (thirdlevel.Children.Count() > 0)
                                                                            {
                                                                                <ul>
                                                                                    @foreach (var third in thirdlevel.Children)
                                                                                    {
                                                                                        <li><a class="hvr-underline-from-center" href="@third.Url">@third.Name</a></li>
                                                                                    }
                                                                                </ul>
                                                                            }

                                                                        }

                                                                    </li>
                                                                                    }

                                                                                }


                                                                            }
                                                    </ul>
                                                                                }
                                                                            }
                                                                            else
                                                                            {
                                                                                if (CurrentNode.Children.Count() > 0 && CurrentNodehideFromSitemap.Children.Where("hideFromSitemap == False").Count() > 0)
                                                                                {
                                                                                    <ul>
                                                                                        @foreach (var childNode in CurrentNode.Children)
